   </ScrollPane>
   <Label layoutX="222.0" layoutY="29.0"  text="Plugs"      />
   <Label layoutX="29.0"  layoutY="29.0"  text="Rotors"     />
   <Label layoutX="222.0" layoutY="281.0" text="Reflectors" />


   <ComboBox fx:id="toselect"    styleClass="border" layoutX="324.0" layoutY="57.0" prefHeight="25.0" prefWidth="93.0"  />
   <Button   fx:id="addRotorBtn" text="Add Rotor" styleClass="greyBtn" layoutX="130.0" layoutY="57.0" mnemonicParsing="false" />

   <Label fx:id="removeRotorBtn"  text="Remove Rotor" styleClass="redBtn" layoutX="100.0" layoutY="95.0"  visible="false"/>
   <Label fx:id="removePlugBtn"   text="Remove Plug"  styleClass="redBtn" layoutX="324.0" layoutY="95.0"  visible="false"/>
</AnchorPane>
