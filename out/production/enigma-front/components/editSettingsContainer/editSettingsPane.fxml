<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane stylesheets="@editSettingsStyle.css" prefHeight="500.0" prefWidth="500.0"
            xmlns = "http://javafx.com/javafx/8.0.341" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="components.editSettingsContainer.EditSettingsPaneController">

   <!-- greens btn -->
   <Button fx:id="randomBtn" layoutX="29.0"  layoutY="365.0"  mnemonicParsing = "false"  text="Random"   styleClass="greenBtn"/>
   <Button fx:id="submitBtn" layoutX="370.0" layoutY="365.0"  mnemonicParsing = "false"  text="Set Code" styleClass="greenBtn"/>


   <TableView fx:id = "plugsTablePreSet"  styleClass="border"   layoutX="222.0"  layoutY="125.0" prefHeight="153.0" prefWidth="200.0">
      <columns>
         <TableColumn fx:id = "activePlugFromColPreSet" prefWidth="75.0" text="From"  />
         <TableColumn fx:id = "activePlugToColPreSet"   prefWidth="75.0" text="To"   />
      </columns>
   </TableView>
   <ComboBox fx:id="fromselect" layoutX="222.0" layoutY="57.0" prefHeight="25.0" prefWidth="93.0" styleClass="border" />

   <Button fx:id="preSetAddPlugButton" text="Add Plug"  styleClass="greyBtn" layoutX="222.0" layoutY="91.0" mnemonicParsing="false" />
   <ComboBox fx:id="refselect"    styleClass="greyBtn"  layoutX="222.0" layoutY="307.0" prefHeight="25.0"   prefWidth="93.0"  />
   <ComboBox fx:id="rotorsSelect" styleClass="greyBtn"  layoutX="29.0"  layoutY="57.0"  prefHeight="25.0"   prefWidth="93.0"  />


   <ScrollPane layoutX="14.0" layoutY="125.0" prefWidth="200.0" styleClass="border" >
