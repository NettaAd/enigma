<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<VBox  prefHeight="615.0" prefWidth="1026.0" xmlns="http://javafx.com/javafx/8.0.341" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.main.MainController">
    <AnchorPane minHeight="100.0" minWidth="0.0" prefHeight="143.0" prefWidth="1024.0">
        <Label alignment="CENTER" layoutX="417.0" layoutY="14.0" prefHeight="22.0" prefWidth="190.0" text="The Enigma Machine">
            <font>
                <Font name="Calibre" size="18.0" />
            </font>
        </Label>
        <Button fx:id="openFileButton" layoutX="21.0" layoutY="48.0" mnemonicParsing="false" onAction="#openFileButtonAction" text="Load File" />
        <Label fx:id="selectedFileName" layoutX="96.0" layoutY="49.0" prefHeight="22.0" prefWidth="357.0" text="No file yet.." />
    </AnchorPane>
    <AnchorPane fx:id="downPane" prefHeight="800.0" prefWidth="160.0">
        <TabPane layoutX="6.0" layoutY="-2.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <Tab fx:id="settingsTab" text="Machine">
            <content>
               <fx:include fx:id="settings" source="../settings/settings.fxml" />
            </content></Tab>
            <Tab text="Encrypt\Decrypt">
            <content>
               <fx:include fx:id="encryptTab" source="../encryptTab/encryptTab.fxml" />
            </content></Tab>
            <Tab text="Brute Force" />
        </TabPane>
    </AnchorPane>
</VBox>
